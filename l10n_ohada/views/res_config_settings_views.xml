<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ohada.reports</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='accounting_reports']" position="after">
                <h2>OHADA Reporting</h2>
                <div class="row mt16 o_settings_container" id="ohada_financial_reports">
                    <div class="col-12 col-lg-6 o_setting_box" id="ohada_dynamic_report" groups="account.group_account_user">
                        <div class="o_setting_left_pane">
                            <field name="module_ohada_reports" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ohada_reports"/>
                            <div class="text-muted" id="ohada_reports">
                                Complet set of SYSCOHADA financial statements. Navigate easily through reports and see what is behind the numbers. 
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
