<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OhadaDashboardMain">
        <div class="oh_dashboards">
            <div class="container-fluid o_ohada_dashboard">
            </div>
        </div>
    </t>

    <t t-name="ManagerDashboard">
        <div class="ohada_dashboard_main o_ohada_dashboard" style="z-index:2;">
            <div id="myForm" class="popup">
                <div class="modal-header">
                    <h5 class="modal-title">Print bundle report</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-label="Close">&amp;times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p style="color:#008784;">Company: <span style="color:#666666;"><t t-esc="widget.data['company_name']"/></span></p>
                    <p style="color:#008784;">Fiscal year: <span style="color:#666666;"><t t-esc="widget.data['this_year']"/></span></p>
                    <t t-foreach="widget.data['print_bundle_reports']" t-as="report">
                        <div class="form-check bundle_item">
                            <input t-att-data-record-id="report['id']" class="form-check-input" type="checkbox" id="gridCheck1" t-att-checked="True"/>
                            <label class="form-check-label" for="gridCheck1">
                              <t t-esc="report['name']"/>
                            </label>
                        </div>
                    </t>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-color-ee export_pdf" data-dismiss="modal">Export pdf</button>
                    <button type="button" class="btn btn-color-ee export_xlsx" data-dismiss="modal">Export xlsx</button>
                </div>
            </div>
            <div id="modal-backdrop"></div>
            <t t-set="menu_id" t-value="widget.data['menu_id']"/>
            <div class="row main-section" style="padding-top:20px;">
                <div class="col-md-2 col-sm-2 dummy"></div>
                <div class="col-sm-12 col-md-12 col-lg-12  monthly_leave_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">

                            <ul style="float:right;padding-left:0;" class="ul-head">
                                <li class="li-head"><t t-esc="widget.data['company_name']"/></li>
                                <li class="li-head" style="margin-left:100px;">
                                    <t t-esc="widget.data['this_year']"/>
                                </li>
                            </ul>
                            <select class="o_input o_mrp_bom_report_variants" style="width: 200px;float:left;">
                                <t t-foreach="widget.data['years']" t-as="year">
                                    <option t-att-value="year" t-att-selected="year == widget.data['this_year'] ? 'selected' : None">
                                        <t t-esc="year" />
                                    </option>
                                </t>
                            </select>
                            <div class="dropdown-menu o_dropdown_menu" role="menu">
                                <!--<t t-call="base.DropdownMenu.MenuItems"/>-->
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4" style="float:left;">
                            <div class="ohada_notification" style="margin-left:-10px">
                                <div class="col-xs-12">
                                    <div class="col-sm-12 col-lg-12" style="padding:0;">
                                        <button class="btn btn-color-ee">IMPORT DATA</button>
                                        <button type="object" class="btn btn-color-ee print_bundle">PRINT BUNDLE</button>
                                        <button class="btn btn-color-ee">CLOSE PERIOD</button>
                                        <button class="btn btn-color-ee">SIGN &amp; PAY</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4" style="float:left;">
                            <div class="ohada_notification" style="margin-left:-10px">
                                <ul style="margin-left:-30px;margin-top:10px;">
                                    <li class="list-left"><a name="create_invoice" type="object">Status of fiscal year</a></li>
                                    <li class="list-right">[posted]</li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Status of journal entries</li>
                                    <li class="list-right">[open]</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4" style="float:left;">
                            <div class="ohada_notification" style="margin-left:-10px">
                                <ul style="margin-left:-30px;margin-top:10px;">
                                    <li class="list-left">Fiscal result</li>
                                    <li class="list-right">[amount]</li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Income tax rate</li>
                                    <li class="list-right">[amount]</li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Income tax</li>
                                    <li class="list-right">[amount]</li>
                                </ul>
                            </div>
                        </div>
                        <div style="clear:both;"></div>
                    </div>
                </div>
            </div>
            <div class="row main-section">
                <div class="col-md-2 col-sm-2 dummy"></div>
                <div class="col-sm-12 col-md-12 col-lg-12  monthly_leave_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">

                            <p class="stat-head" style="padding : 0px;">Cover page data sheets</p>
                        </div>
                        <div style="margin-left:10px;margin-bottom:15px;">
                            <button class="btn btn-color-ee">COVER PAGE</button>
                            <button class="btn btn-color-ee">SHEET R1</button>
                            <button class="btn btn-color-ee">SHEET R2</button>
                            <button class="btn btn-color-ee">SHEET R3</button>
                            <button class="btn btn-color-ee">SHEET R4</button>
                            <div style="clear:both;"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row main-section">

                <div class="col-md-6 col-lg-4 col-sm-12">
                    <div class="ohada_notification_big" style="border-left:3px solid #934da5;">
                        <div class="oh-card-body pb-0" style="padding:0;">
                            <a class="stat-head open_report" t-att-report-id="widget.data['Balance Sheet']['id']" t-att-name="widget.data['Balance Sheet']['name']" style="padding:0px;margin-top:15px;cursor:pointer;margin-left: 12px;" href="javascript:;">Balance sheet</a>
                            <div class="dropdown">
                              <button style="border:none;padding:10px 15px;" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                              </button>
                              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item print_bs_pdf" style="cursor:pointer;">Export report</a>
                              </div>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="ohada_notification" style="height:80px;">
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Total assets</li>
                                    <li class="list-right"><t t-esc="widget.data['bz']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Total liabilities</li>
                                    <li class="list-right"><t t-esc="widget.data['dz']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Difference</li>
                                    <li class="list-right"><t t-esc="widget.data['dif_1']"/></li>
                                </ul>
                            </div>
                        </div>
                        <div class="leave_graph" style="margin-top:-30px !important;margin-left:30px;" />
                     </div>
                </div>
                <div class="col-md-6 col-lg-4 col-sm-12">
                    <div class="col-xs-12  ohada_notification_big" style="padding: 0;border-left:3px solid #934da5;">
                        <!--<div style="background-color: #934da5;width:3px;height:100%;float:left;"></div>-->
                        <div class="oh-card-body pb-0" style="padding:0;">
                            <a class="stat-head open_report" t-att-report-id="widget.data['Profit and lost']['id']" t-att-name="widget.data['Profit and lost']['name']" style="padding:0px;margin-top:15px;cursor:pointer;margin-left: 12px;" href="javascript:;">Profit  &amp; lost</a>
                            <!--<a class="stat-head" style="padding:0px;margin-top:15px;cursor:pointer;margin-left: 12px;" t-att-href="'/web#action=' + widget.data['Profit and lost'] + '&amp;' + 'menu_id=' + menu_id">Profit  &amp; lost</a>-->
                            <div class="dropdown">
                              <button style="border:none;padding:10px 15px;" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                              </button>
                              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item print_pl_pdf" style="cursor:pointer;">Export report</a>
                              </div>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="ohada_notification" style="height:80px;">
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Net profit <t t-esc="widget.data['this_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['xl']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Net profit <t t-esc="widget.data['prev_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['xl-1']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Variation</li>
                                    <li class="list-right"><t t-esc="widget.data['xl_dif']"/></li>
                                </ul>
                            </div>
                            <div class="leave_graph2" style="margin-top:-30px !important;margin-left:30px;" />
                        </div>
                     </div>
                </div>
                <div class="col-md-12 col-lg-4 col-sm-12">
                    <div class="col-xs-12  ohada_notification_big" style="padding: 0;border-left:3px solid #934da5;">
                        <!--<div style="background-color: #934da5;width:3px;height:100%;float:left;"></div>-->
                        <div class="oh-card-body pb-0" style="padding:0;">
                            <a class="stat-head open_report" t-att-report-id="widget.data['Cash Flow Statement']['id']" t-att-name="widget.data['Cash Flow Statement']['name']" style="padding:0px;margin-top:15px;cursor:pointer;margin-left: 12px;" href="javascript:;">Cashflow statement</a>
                            <!--<a class="stat-head" style="padding:0px;margin-top:15px;cursor:pointer;margin-left: 12px;" t-att-href="'/web#action=' + widget.data['Cash Flow Statement'] + '&amp;' + 'menu_id=' + menu_id">Cashflow statement</a>-->
                            <div class="dropdown">
                              <button style="border:none;padding:10px 15px;" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                              </button>
                              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item print_cf_pdf" style="cursor:pointer;">Export report</a>
                              </div>
                            </div>
                        </div>
                        <div class="col-xs-12" style="max-width: 96%;">
                            <div class="ohada_notification" style="height:80px;">
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Cash closing balance <t t-esc="widget.data['this_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['zh']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Cash closing balance <t t-esc="widget.data['prev_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['zh-1']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Variation</li>
                                    <li class="list-right"><t t-esc="widget.data['zh_dif']"/></li>
                                </ul>
                            </div>
                        </div>
                        <div class="monthly_join_resign_trend">
                            <div class="join_resign_trend" style="margin-top:-10px !important;margin-left:20px;padding:0px;" />
                        </div>
                     </div>

                </div>
            </div>
            <div class="row main-section">
                <div class="col-md-2 col-sm-2 dummy"></div>
                <div class="col-sm-12 col-md-12 col-lg-12  monthly_leave_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">

                            <p class="stat-head" style="padding : 0px;">Cover page data sheets</p>
                        </div>
                        <div>
                            <t t-foreach="widget.data['notes']" t-as="note">
                                <button class="btn btn-color-ee open_report" t-att-report-id="note['id']" t-att-name="note['report_name']" href="javascript:;" style="margin-left:10px;"><t t-esc="note['name']"/></button>
                            </t>
                            <div style="clear:both;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="OhadaWarning">
        <div>
            <p>Error : Could not load data</p>
            <p>Please contact system admin for the setup</p>
        </div>
    </t>


</templates>