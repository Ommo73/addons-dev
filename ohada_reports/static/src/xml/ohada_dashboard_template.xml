<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OhadaDashboardMain">
        <div class="oh_dashboards">
            <div class="container-fluid o_ohada_dashboard">
            </div>
        </div>
    </t>

    <t t-name="ManagerDashboard">
        <div class="ohada_dashboard_main o_ohada_dashboard">
            <t t-set="menu_id" t-value="widget.data['menu_id']"/>
            <div class="row main-section" style="padding-top:20px;">
                <div class="col-md-2 col-sm-2 dummy"></div>
                <div class="col-sm-10 col-lg-10  monthly_leave_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                            <ul style="float:right;padding-left:0;" class="ul-head">
                                <li class="li-head"><t t-esc="widget.data['company_name']"/></li>
                                <li class="li-head" style="margin-left:185px;">
                                    <t t-esc="widget.data['this_year']"/>
                                </li>
                            </ul>
                            <select class="o_input o_mrp_bom_report_variants" style="width: 200px;float:left;">
                                <t t-foreach="widget.data['years']" t-as="year">
                                    <option t-att-value="year" t-att-selected="year == widget.data['this_year'] ? 'selected' : None">
                                        <t t-esc="year" />
                                    </option>
                                </t>
                            </select>
                            <div class="dropdown-menu o_dropdown_menu" role="menu">
                                <!--<t t-call="base.DropdownMenu.MenuItems"/>-->
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4" style="float:left;">
                            <div class="ohada_notification" style="margin-left:-10px">
                                <div class="col-xs-12">
                                    <div class="col-sm-12 col-lg-12" style="padding:0;">
                                        <button class="btn btn-color-ee">IMPORT DATA</button>
                                        <button class="btn btn-color-ee">PRINT BUNDLE</button>
                                        <button class="btn btn-color-ee">CLOSE PERIOD</button>
                                        <button class="btn btn-color-ee">SIGN &amp; PAY</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4" style="float:left;">
                            <div class="ohada_notification" style="margin-left:-10px">
                                <ul style="margin-left:-30px;margin-top:10px;">
                                    <li class="list-left"><a name="create_invoice" type="object">Status of fiscal year</a></li>
                                    <li class="list-right">[posted]</li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Status of journal entries</li>
                                    <li class="list-right">[open]</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4" style="float:left;">
                            <div class="ohada_notification" style="margin-left:-10px">
                                <ul style="margin-left:-30px;margin-top:10px;">
                                    <li class="list-left">Fiscal result</li>
                                    <li class="list-right">[amount]</li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Income tax rate</li>
                                    <li class="list-right">[amount]</li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Income tax</li>
                                    <li class="list-right">[amount]</li>
                                </ul>
                            </div>
                        </div>
                        <div style="clear:both;"></div>
                    </div>
                </div>
            </div>
            <div class="row main-section">
                <div class="col-md-2 col-sm-2 dummy"></div>
                <div class="col-sm-10 col-lg-10  monthly_leave_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                            <p class="stat-head" style="padding : 0px;">Cover page data sheets</p>
                        </div>
                        <div style="margin-left:10px;margin-bottom:15px;">
                            <button class="btn btn-color-ee">COVER PAGE</button>
                            <button class="btn btn-color-ee">SHEET R1</button>
                            <button class="btn btn-color-ee">SHEET R2</button>
                            <button class="btn btn-color-ee">SHEET R3</button>
                            <button class="btn btn-color-ee">SHEET R4</button>
                            <div style="clear:both;"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row main-section">
                <div class="col-md-2 col-sm-2 dummy"></div>
                <div class="col-md-5 col-lg-4" style="max-width:27.77%">
                    <div class="ohada_notification_big" >
                        <div style="background-color: #934da5;width:3px;height:100%;float:left;"></div>
                        <div class="oh-card-body pb-0" style="padding:0;">
                            <h4 class="mb-0">
                            </h4>
                            <a class="stat-head" style="padding:0px;margin-top:15px;cursor:pointer;" t-att-href="'/web#action=' + widget.data['Balance sheet'] + '&amp;' + 'menu_id=' + menu_id">Balance sheet</a>
                        </div>
                        <div class="col-xs-12">
                            <div class="ohada_notification" style="height:80px;margin-left:10px;">
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Total assets</li>
                                    <li class="list-right"><t t-esc="widget.data['bz']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Total liabilities</li>
                                    <li class="list-right"><t t-esc="widget.data['dz']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Difference</li>
                                    <li class="list-right"><t t-esc="widget.data['dif_1']"/></li>
                                </ul>
                            </div>
                        </div>
                        <div class="leave_graph" style="margin-top:-50px !important;margin-left:30px;" />
                     </div>
                </div>
                <div class="col-md-4 col-lg-4" style="max-width:27.77%">
                    <div class="col-xs-12  ohada_notification_big" style="padding: 0;">
                        <div style="background-color: #934da5;width:3px;height:100%;float:left;"></div>
                        <div class="oh-card-body pb-0" style="padding:0;">
                            <h4 class="mb-0">
                            </h4>
                            <a class="stat-head" style="padding:0px;margin-top:15px;cursor:pointer;" t-att-href="'/web#action=' + widget.data['Profit And Loss'] + '&amp;' + 'menu_id=' + menu_id">Profit  &amp; lost</a>
                        </div>
                        <div class="col-xs-12">
                            <div class="ohada_notification" style="height:80px;margin-left:10px;">
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Net profit <t t-esc="widget.data['this_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['xl']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Net profit <t t-esc="widget.data['prev_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['xl-1']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Variation</li>
                                    <li class="list-right"><t t-esc="widget.data['xl_dif']"/></li>
                                </ul>
                            </div>
                            <div class="leave_graph2" style="margin-top:-50px !important;margin-left:30px;" />
                        </div>
                     </div>
                </div>
                <div class="col-md-4 col-lg-4" style="max-width:27.77%">
                    <div class="col-xs-12  ohada_notification_big" style="padding: 0;">
                        <div style="background-color: #934da5;width:3px;height:100%;float:left;"></div>
                        <div class="oh-card-body pb-0" style="padding:0;">
                            <h4 class="mb-0">
                            </h4>
                            <a class="stat-head" style="padding:0px;margin-top:15px;cursor:pointer;" t-att-href="'/web#action=' + widget.data['Cash Flow Statement'] + '&amp;' + 'menu_id=' + menu_id">Cashflow statement</a>
                        </div>
                        <div class="col-xs-12">
                            <div class="ohada_notification" style="height:80px; margin-left:10px;">
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Cash closing balance <t t-esc="widget.data['this_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['zh']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Cash closing balance <t t-esc="widget.data['prev_year']"/></li>
                                    <li class="list-right"><t t-esc="widget.data['zh-1']"/></li>
                                </ul>
                                <div style="clear:both;"></div>
                                <ul style="margin-left:-30px;margin-top:5px;">
                                    <li class="list-left">Variation</li>
                                    <li class="list-right"><t t-esc="widget.data['zh_dif']"/></li>
                                </ul>
                            </div>
                        </div>
                        <div class="monthly_join_resign_trend">
                            <div class="join_resign_trend" style="margin-top:-20px !important;margin-left:20px;padding:0px;" />
                        </div>
                     </div>

                </div>
            </div>
            <div class="row main-section">
                <div class="col-md-2 col-sm-2 dummy"></div>
                <div class="col-sm-10 col-lg-10  monthly_leave_graph_view">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                            <p class="stat-head" style="padding : 0px;">Cover page data sheets</p>
                        </div>
                        <div style="margin-left:10px;">
                            <button class="btn btn-color-ee">NOTE 1</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 2</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 3A</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 3B</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 3C</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 3D</button>
                            <div style="clear:both;"></div>
                        </div>
                        <div style="margin-left:10px;">
                            <button class="btn btn-color-ee">NOTE 3E</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 4</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 5</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 6</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 7</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 8</button>
                            <div style="clear:both;"></div>
                        </div>
                        <div style="margin-left:10px;margin-bottom:15px;">
                            <button class="btn btn-color-ee">NOTE 8A</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 9</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 10</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 11</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 12</button>
                            <button class="btn btn-color-ee" style="margin-left:10px;">NOTE 13</button>
                            <div style="clear:both;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="OhadaWarning">
        <div>
            <p>Error : Could not load data</p>
            <p>Please contact system admin for the setup</p>
        </div>
    </t>

</templates>