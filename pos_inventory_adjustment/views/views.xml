<odoo>
    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stock_location_id']/../../../.." position="after">
                <h2>Inventory Adjustment</h2>
                <div class="row mt16 o_settings_container" id="inventory_adjustment">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name='inventory_adjustment'/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="picking_type_id" string="Inventory Adjustment Mode"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
